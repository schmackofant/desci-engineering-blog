---
export interface Props {
	post: any;
	author: string;
	image: string;
}
const { post, author, image } = Astro.props;

function formatDate(date) {
	return new Date(date).toUTCString().replace(/(\d\d\d\d) .*/, '$1'); // remove everything after YYYY
}
---

<article class="border-b border-gray-150">
	{post.image &&
		<a href={post.url}><img src={post.image} class="mb-4"></a>
	}

	<div class="group grid grid-cols-12 pb-5">
		<div class="col-span-7">
			<a href={post.url}><h2 class="text-4xl font-bold leading-tight transition-colors duration-200 group-hover:text-gray-500">{post.title}</h2></a>
			<div class="flex items-center mt-1.5">
				<a href={`/authors/${post.author}`}><img src={author.image} class="h-8 w-8 rounded-full mr-2"></a>
				<a class="text-gray-700 hover:underline" href={`/authors/${post.author}`}>{author.name}</a>
			</div>

		</div>

		<div class="col-span-1"></div>

		<div class="col-span-4 font-extralight text-gray-800">
			<a class="transition-colors duration-200 group-hover:text-gray-500" href={post.url}>{post.description}</a>
		</div>
	</div>
</article>