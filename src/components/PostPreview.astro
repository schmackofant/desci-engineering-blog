---
export interface Props {
	post: any;
	author: string;
	image: string;
}
const { post, author } = Astro.props;
---

<article class="border-b border-gray-150 group">
	{post.image &&
		<a href={post.url}><img src={post.image} class="mb-4 transition-all group-hover:saturate-50 duration-150"></a>
	}

	<div class="sm:grid sm:grid-cols-12 pb-5">
		<div class="sm:col-span-7">
			<a href={post.url}><h2 class="text-2xl sm:text-4xl font-bold leading-tight transition-colors duration-150 group-hover:text-gray-500">{post.title}</h2></a>
			<div class="flex items-center mt-1.5">
				<a href={`/authors/${post.author}`}><img src={author.image} class="h-6 w-6 sm:h-8 sm:w-8 rounded-full mr-2"></a>
				<a class="text-gray-700 text-sm sm:text-base hover:underline" href={`/authors/${post.author}`}>{author.name}</a>
			</div>

		</div>

		<div class="sm:col-span-1"></div>

		<div class="sm:col-span-4 mt-4 sm:mt-0 font-extralight text-gray-800">
			<a class="transition-colors duration-150 group-hover:text-gray-500" href={post.url}>{post.description}</a>
		</div>
	</div>
</article>